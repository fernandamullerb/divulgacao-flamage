      <div class="responsive">
        <div class="gallery">
          <a target="_blank" href="https://wa.me/5571993116437">
            <img
              src="https://github.com/CaitoCF.png"
              alt="Mountains" width="600" height="400">
          </a>
          <div class="desc">Caio Caldeira</div>
        </div>
      </div>
